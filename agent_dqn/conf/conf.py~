from collections import namedtuple


class Config:
    DIM_OF_FEATURES = 4
    DIM_OF_ACTIONS = 2

    MEMEORY_SIZE = 100000
    BATCH_SIZE = 256
    TARGET_UPDATE_INTERVAL = 20
    NUM_EPISODES = 1000

    EPSILON_MAX = 1
    EPSILON_MIN = 0.01
    EPSILON_DECAY = 0.0001

    LR = 0.001
    GAMMA = 0.95

    Experience = namedtuple(
        "Experience",
        ("state", "action", "next_state", "reward", "done")
    )